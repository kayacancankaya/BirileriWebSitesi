@model BirileriWebSitesi.Models.BlogPost


<div class="news-single">
    <div class="inner-box">
        <div class="image">
            <img loading="lazy" src="@Url.Content(Model.ImageUrl))" alt="@Model.Title" />
        </div>
        <div class="lower-content">
            <ul class="post-meta">
                <li><span class="icon fa fa-user"></span>@Model.Author</li>
                <li><span class="icon fa fa-calendar"></span>@Model.PublishedDate.ToString("dd.MM.yyyy")</li>
            </ul>
            @Html.Raw(Model.Content)

            <!--post-share-options-->
            <div class="post-share-options clearfix">
                <div class="pull-left tags"><span class="tag">Etiketler:</span>
                @foreach (var tag in Model.TagsList)
                {
                    <button data-id="@tag.Id" style="background-color:transparent;text-decoration:underline;cursor:pointer;" class="tag-button mr-3 mb-3">@tag.Name</button>
                }
               
                <div class="pull-right">
                    @*  <ul class="social-icon-three">
