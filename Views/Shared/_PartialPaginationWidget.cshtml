@model BirileriWebSitesi.Models.ViewModels.PaginationViewModel 

<input type="hidden" id="page-number" value="@Model.CurrentPage" />
<input type="hidden" id="total-page" value="@Model.TotalPage" />
<!--Styled Pagination-->
@if(Model.TotalPage>1)
{
 
    <ul class="styled-pagination text-center">

        <span class="alert-text"></span>
        @if(Model.CurrentPage !=1)
        {
            <li class="prev"><a class="pagination-previous"><span class="fa fa-angle-left"></span></a></li>
        }
    
        @for (int i = 1; i <= Model.TotalPage; i++)
        {
            if(i == Model.CurrentPage)
            {
                <li><a class="pagination-number active">@i</a></li>
            }
            else
            {
                <li><a class="pagination-number">@i</a></li>
            }
        }
        @if(Model.CurrentPage < Model.TotalPage)
        {
            <li class="next"><a class="pagination-next"><span class="fa fa-angle-right"></span></a></li>
        }
   
    </ul>

}
<!--End Styled Pagination-->