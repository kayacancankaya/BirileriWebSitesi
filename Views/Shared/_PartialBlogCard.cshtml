@model BirileriWebSitesi.Models.BlogPost

<div class="news-block-three col-lg-4 col-md-6 col-sm-12">
    <div class="inner-box">
        <div class="image">
            <img loading="lazy" src="@Url.Content(Model.ImageUrl)" alt="@Model.Title" />
            <a class="overlay-link" asp-controller="blog" asp-action="BlogPost" asp-route-path="@Model.Slug"><span class="icon fa fa-link"></span></a>
        </div>
        <div class="lower-content">
            <h3><a asp-controller="blog" asp-action="BlogPost" asp-route-path="@Model.Slug">@Model.Title</a></h3>
            <div class="text">@Model.Summary</div>
        </div>
    </div>
</div>