    <script>
        $(document).ready(function () {
            let count = 0;
            let countInquiry = 0;

            $(document).on("click", ".close-modal-button", function() {
                 $(this).closest(".modal").modal('hide');
            });

                $.ajax({
                    type: "POST",
                    url: "/Cart/InitializeCartNumber",
                    async: true,
                    success: function (response) {
                        let currentItem = response.message;
                        $(".cart .cart-count").text(currentItem);
                    },
                    error: function (xhr) {
                        var response = JSON.parse(xhr.responseText);

                    }
                });
                $.ajax({
                    type: "POST",
                    url: "/Cart/InitializeInquiryNumber",
                    async: true,
                    success: function (response) {
                        let currentItem = response.message;
                        $(".inquiry .inquiry-count").text(currentItem);
                    },
                    error: function (xhr) {
                        var response = JSON.parse(xhr.responseText);

                    }
                });
            

            $("#increase").click(function () {
                count++;

                updateCart();
            });

            $("#decrease").click(function () {
                if (count > 0) {
                    count--;
                    updateInquiry();
                }
            });
            $("#increaseInquiry").click(function () {
                countInquiry++;

                updateCart();
            });

            $("#decreaseInquiry").click(function () {
                if (countInquiry > 0) {
                    countInquiry--;
                    updateInquiry();
                }
            });
            $(document).on("click", ".subscribe-btn", function () {
                var emailAddress = $(this).siblings(".subscribe-input").val();
                var button = $(this);

                // Disable button and show loading
                $(".subscribe-btn").prop("disabled", true);
                $.ajax({
                    type: "POST",
                    url: "/Email/Subscribe",
                    headers: { "RequestVerificationToken": getAntiForgeryToken() },
                    async: true,
                    data: {
                        emailAddress: emailAddress,
                    },
                    success: function (response) {
                        if (response.success) {
                            $(".subscribe-btn").prop("disabled", false);
                            showAlert(button, response.message, "success");  // Show success message
                        } else {
                            $(".subscribe-btn").prop("disabled", false);
                            showAlert(button, response.message, "danger");  // Show error message
                        }
                    },
                    error: function (xhr) {
                        $(".subscribe-btn").prop("disabled", false);
                        var response = JSON.parse(xhr.responseText);
                        showAlert(response.message, "danger");
                    }
                });
            });

            $(document).on("click", ".send-contact-us", function (e) {
                e.preventDefault();
                var emailAddress = $("#contact-us-email-address").val();
                var username = $("#contact-us-username").val();
                var phone = $("#contact-us-phone").val();
                var subject = $("#contact-us-subject").val();
                var message = $("#contact-us-message").val();
                var button = $(this);

                let requiredFields = ["contact-us-username", "contact-us-email-address","contact-us-message" ];
                

                let isValid = true;

                // if fields are filled
                requiredFields.forEach(function (id) {
                    let input = document.getElementById(id);
                    if (input && input.value.trim() === "") {
                        isValid = false;
                        input.style.border = "1px solid red"; // Highlight empty fields
                    } else {
                        input.style.border = ""; // Reset style
                    }
                });
                if (!isValid) {
                    e.preventDefault();
                    showAlert(button,"Lütfen zorunlu alanları doldurun.","danger");
                    return;
                }

                // Disable button and show loading
                $(".send-contact-us").text("İşlem Yapılıyor...").prop("disabled", true);

                $.ajax({
                    type: "POST",
                    url: "/Email/SendEmail",
                    async: true,
                    headers: { "RequestVerificationToken": getAntiForgeryToken() },
                    data: {
                        emailAddress: emailAddress,
                        username: username,
                        phone: phone,
                        subject: subject,
                        message: message,
                    },
                    async: true,
                    success: function (response) {
                        if (response.success) {
                             showAlert(button,response.message, "success");  // Show success message
                            $(".send-contact-us").text("Gönder").prop("disabled", false);
                        } else {
                            showAlert(button, response.message, "danger");  // Show error message
                            $(".send-contact-us").text("Gönder").prop("disabled", false);
                        }
                    },
                    error: function () {
                        showAlert("Sunucu hatası! Lütfen daha sonra tekrar deneyin.", "danger");
                            $(".send-contact-us").text("Gönder").prop("disabled", false);
                    }
                });
            });
        });
        function showAlert(button, message, type) {
            var alertText = button.prevAll(".alert-text").first(); // Find closest alert-text
            
            if (alertText.length === 0) {
                
                return;
            }

            alertText.text(message)
                .removeClass("alert-success alert-danger")
                .addClass(type === "success" ? "alert-success" : "alert-danger");

            // Show the alert as a popup without moving elements
            alertText.css({ opacity: "1", display: "inline-block" }).fadeIn(300);

            setTimeout(() => {
                alertText.css("opacity", "0"); // Fade out smoothly
                setTimeout(() => alertText.hide(), 300);
            }, 4000);
        }
        function updateCart() {
            $("#cartCount").text(count);
            $("#itemCount").text(count);
            $("#decrease").prop("disabled", count === 0);
        }
        function updateInquiry() {
            $("#inquiryCount").text(count);
            $("#inquiryItemCount").text(count);
            $("#decreaseInquiry").prop("disabled", count === 0);
        }
        function getCookie(name) {
            var match = document.cookie.match(new RegExp('(^| )' + name + '=([^;]+)'));
            if (match) {
                return decodeURIComponent(match[2]);
            } else {
                return null;
            }
        }
        function getAntiForgeryToken() {
            return $('input[name="__RequestVerificationToken"]').val();
        }
    </script>
    @RenderSection("AdditionalScripts", required: false)

</body>

</html>
