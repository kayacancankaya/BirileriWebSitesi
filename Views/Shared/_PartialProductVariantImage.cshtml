@model BirileriWebSitesi.Models.ViewModels.ProductDetailedVariantImageViewModel
<div class="swiper swiper-single-product" >
    <div class="swiper-wrapper m-0 p-0">
        @foreach (var imagePath in Model.FilePaths)
        {
            <div class="swiper-slide">
                <a href="@imagePath" class="lightbox-image" title="@Model.ProductVariantName">
                    <img src="@Url.Content(imagePath)" class="product-image" style="height:auto;width:100%;object-fit:cover;" loading="lazy" alt="@Model.ProductVariantName" />
                </a>
                <input type="hidden" id="variant-name" value="@Model.ProductVariantName" />
            </div>

        }
       
    </div>

    <!-- Optional pagination -->
    <div class="swiper-pagination"></div>

    <!-- Optional navigation -->
    <div class="swiper-button-next"></div>
    <div class="swiper-button-prev"></div>

</div>
